<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.macaro-ni.jp/assets/img/shutterstock/shutterstock_167718563.jpg);">
  <div class="container">
    <h1>cocktail <strong>to</strong> cocktails <strong></strong>!</h1>

  </div>
</div>

<div class="cards">
<% @cocktails.each do |cocktail| %>
  <% if cocktail.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
       <%= link_to cocktail.name, cocktail_path(cocktail)%>
    </div>
  <% else %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
      <%= link_to cocktail.name, cocktail_path(cocktail)%>
    </div>
  <% end %>
<% end %>
</div>
