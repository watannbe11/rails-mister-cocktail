<% if @cocktail.photo.attached? %>
  <div class="card-product">
    <%= cl_image_tag @cocktail.photo.key %>
    <div class="card-product-infos">
      <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.ingredient.name %>
        <%= dose.description %>
      <% end %>
      <%= link_to "delete", cocktail_path(@cocktail), method: :delete %>
      <%= link_to "add", new_cocktail_dose_path(@cocktail)  %>
    </div>
  </div>
<% else %>

<div class="card-product">
  <img src="https://genki-ichiba.com/login/wp-content/uploads/2019/06/cropped-noimage.jpg" />
  <div class="card-product-infos">
    <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient.name %></p>
    <p><%= dose.description %></p>
    <%= link_to "delete", dose_path(dose), method: :delete %>
    <%= cl_image_tag('https://res.cloudinary.com/dpykbgnpw/image/upload/v1582266446/cnwmlavqd5kn7dxmm7j4.jpg', width: 400, height: 300, crop: :fill) %>
  <% end %>
<%= link_to "delete", cocktail_path(@cocktail), method: :delete %>
<%= link_to "back", root_path, class: "btn-inbox" %>
<%= link_to "add", new_cocktail_dose_path(@cocktail)  %>
  </div>
</div>
<% end %>






